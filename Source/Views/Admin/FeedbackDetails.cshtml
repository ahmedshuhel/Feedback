@model ComplaintBox.Web.Models.FeedbackDetailsViewModel
@{
    ViewBag.Title = "Dashboard";
    ViewBag.PageTitle = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style type="text/css">
    #detail-form {
        background-color: #ffffff;
        border-radius: 5px;
        margin-bottom: 20px;
        margin-top: 20px;
        padding: 15px 50px;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-sm-offset-1 col-sm-7 ">


            @using (Html.BeginForm("ResolveFeedback", "Admin", FormMethod.Post, new {id = "detail-form"}))
            {
                <h1 class="text-center">Feedback Details</h1>


                <table class="table table-striped table-hover">
                    <tbody>
                        <tr>
                            <td>Name</td>
                            <td>@Model.FeedbackUser</td>
                        </tr>
                        <tr>
                            <td>Email</td>
                            <td>@Model.Email</td>
                        </tr>

                        <tr>
                            <td>Phone</td>
                            <td>@Model.Phone</td>
                        </tr>
                        <tr>
                            <td>Address</td>
                            <td>@Model.Address</td>
                        </tr>
                        <tr>
                            <td>Feedback</td>
                            <td>@Model.Feedback</td>
                        </tr>
                        <tr>
                            <td>@Model.SubjectTitle</td>
                            <td>@Model.Topic</td>
                        </tr>
                        <tr>
                            <td>Status</td>
                            <td>

                                @{
                                    if (Model.Status == "NEW")
                                    {
                                        <span class="label label-warning">
                                            @Model.Status
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="label label-success">
                                            @Model.Status
                                        </span>
                                    }
                                }

                            </td>
                        </tr>
                        <tr>
                            <td>Date</td>
                            <td>@Model.FeedbackDate</td>
                        </tr>
                    </tbody>
                </table>


                <div class="form-group">
                    <label for="comment">Comment</label>
                    @Html.TextAreaFor(m => m.Comment, new {@class = "form-control", placeholder = "Write a note..", id = "comment"})
                    @Html.HiddenFor(m=> m.FeedbackId)
                </div>


                <div class="form-group">
                    <div>
                        <button type="submit" class="btn btn-success btn-block">Resolve</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>