@model ComplaintBox.Web.Models.ListTopicViewModel

@{    
    ViewBag.Title = "Dashboard";
    ViewBag.PageTitle = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">

    <h2>@Model.SubjectTitle List</h2>

    <table class="table table-striped table-hover">
        <tr>
            <th>
                @Model.SubjectTitle
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Topics)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TopicTitle)
                </td>
                <td>                    
                    <a href="@Url.Action("EditTopic", new { id = item.TopicId })"> <span class="fa fa-edit fa-2x"></span></a> |
                    <a href="@Url.Action("DeleteTopic", new { id = item.TopicId })"> <span class="fa fa-trash-o fa-2x"></span></a>                    
                </td>
            </tr>
        }

    </table>
    
    <p>
        @Html.ActionLink("Add New " + @Model.SubjectTitle, "AddNewTopic")
    </p>

</div>
