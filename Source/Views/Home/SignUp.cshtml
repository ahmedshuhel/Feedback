@{ Layout = "~/Views/Shared/_SeconderyLayout.cshtml"; }

@section Style{
    <style type="text/css">
        #singup-form {
            background-color: #ffffff;
            border-radius: 5px;
            margin-bottom: 20px;
            margin-top: 20px;
            padding: 15px 50px;
        }
    </style>
}

<div class="container">
    <div class="row">
        <div class="col-lg-offset-4 col-lg-5 ">
            <form role="form" id="singup-form">
                <h1 class="text-center">Singup And Enjoy!</h1>

                <div class="form-group">
                    <label for="username">User Name</label>

                    <div class="input-group">
                        <span class="input-group-addon"><span class="fa fa-user"></span></span>
                        <input id="username" type="text" class="form-control" placeholder="User Name">
                    </div>
                </div>

                <div class="form-group">
                    <label for="email">Email</label>

                    <div class="input-group">
                        <span class="input-group-addon"><span class="fa fa-envelope"></span></span>
                        <input id="email" type="email" class="form-control" placeholder="email">
                    </div>
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="fa fa-key"></span></span>
                        <input id="password" type="password" class="form-control" placeholder="Password">
                    </div>

                </div>

                <div class="form-group">
                    <label for="confirmpassword">Repeat Password</label>


                    <div class="input-group">
                        <span class="input-group-addon"><span class="fa fa-key"></span></span>
                        <input id="confirmpassword" type="password" class="form-control" placeholder="Repeat Password">
                    </div>
                </div>

                <div class="form-group">
                    <div>
                        <button type="submit" class="btn btn-primary btn-block">Sign Up</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>
