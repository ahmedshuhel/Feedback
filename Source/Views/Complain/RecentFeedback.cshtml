@model ComplaintBox.Web.Controllers.RecentFeedBackViewModel

@{
    ViewBag.Title = "Recent Feedbacks";
    Layout = "/Views/Shared/_SeconderyLayout.cshtml";
}

@section Style
{
    <style type="text/css">
        .organization-list {
            margin: 30px 0px 30px 0px;
            background: #fff;
            padding: 20px 20px;
            border-radius: 5px;
        }

        .registered-org-header {
            margin-bottom: 20px;
        }
    </style>

}

<div class="container">
    <div class="row">
        <div class="col-lg-10 col-lg-offset-1">
            <div class="organization-list">
                <h1 class="registered-org-header text-center">Recent Feedbacks</h1>
                <h3 class="text-center">@Model.Organization</h3>
                <div class="list-group">

                    @foreach (var item in Model.RecentFeedbacks)
                    {
                        <a href="#" class="list-group-item" title="Click to show the details of the feedback">
                            <div class="pull-right">
                                @item.FeedbackDate.ToShortDateString()
                            </div>
                            <h3 class="list-group-item-heading">@item.Subject</h3>
                            <p class="list-group-item-text">@item.Feedback</p>
                        </a>                    
                    }
                </div>


                <div class="row">
                    <div class="col-lg-4 col-lg-offset-4">
                        <ul class="pagination">
                            <li class="disabled"><a href="#">&laquo;</a></li>
                            <li class="active"><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">5</a></li>
                            <li><a href="#">&raquo;</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
