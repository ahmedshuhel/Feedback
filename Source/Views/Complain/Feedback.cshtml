
<div class="container">
    <div class="row">       
        <div class="col-lg-8 col-lg-offset-4">
            
            <div class="panel panel-default">
                <div class="panel-heading text-center"> Enter FeedBack</div>
                <div class="panel-body">
                    <form class="form-horizontal" role="form">
                        <div class="form-group" >
                            <label for="name" class="col-sm-3 control-label">Enter Your Name:</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" placeholder="Name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="complaint" class="col-sm-3 control-label">Your Complaint</label>
                            <div class="col-sm-9">
                                <textarea class="form-control" rows="3"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="rating" class="col-sm-3 control-label">Rate It:</label>
                            <div class="col-sm-9">
                                <div class="rating">
                                    <span class="glyphicon glyphicon-star-empty"></span>
                                    <span class="glyphicon glyphicon-star-empty"></span>
                                    <span class="glyphicon glyphicon-star-empty"></span>
                                    <span class="glyphicon glyphicon-star-empty"></span>
                                    <span class="glyphicon glyphicon-star-empty"></span>
                                </div>
                            </div>
                        </div> 
                        
                         <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-9">
                                <span>Please give us you <span class="badge">email</span> address if you would like to hear form us about your feedback.</span>
                            </div>
                        </div>
                                                
                        <div class="form-group">                           
                            <label for="" class="col-sm-3 control-label">Email</label>
                            <div class="col-sm-9">
                                <input type="email" class="form-control" id="inputEmail3" placeholder="Email">                                                                                                         
                            </div>
                        </div>
                        
                       
                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-9">
                                <strong>Would you like to give us some additional information? </strong>
                                <div class="checkbox-inline">                                   
                                    <label>                                        
                                        <input id="additional-info" type="checkbox">
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div id="additional-info-box" style="display: none">
                            <div class="form-group">
                                <label for="name" class="col-sm-3 control-label">Phone:</label>
                                <div class="col-sm-9">
                                    <input type="tel" class="form-control">                               
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="name" class="col-sm-3 control-label">Address:</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-9">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                  
                    </form>
                </div>
            </div>           
        </div>
    </div>    
</div>


@section Script
{
    <script type="text/javascript">
        $(function() {
            $("#additional-info").on('change', function() {
                $("#additional-info-box").fadeToggle();
            });
        });
    </script>

}