        <!-- Custom styles for this template -->
        <link href="/Content/css/carousel.css" rel="stylesheet">
        <link href="/Content/css/feedback.css" rel="stylesheet" />
        <style>
            body {
                background: #edece4;
                padding-top: 90px;
            }

            #navbar-collapse-top-menu {
                padding-left: 70px;
                padding-right: 70px;
                padding-top: 10px;
            }

            .navbar-header { padding-top: 10px; }

            .navbar {
                background: #ffffff;
                min-height: 80px;
            }

            #global-footer {
                background: #18191b;
                border-bottom: #0a0a0a 5px solid;
                font-size: 1.1rem;
                padding: 100px;
            }

            #footer-menu { border-bottom: 1px solid gray; }

           .footer-menu-links li a {
                color: gray;
                text-transform: uppercase;
               padding: 0px 10px;
               text-decoration: none;
            }

           .footer-menu-links li a:hover {
                -moz-transition: color .7s linear;
                -o-transition: color .7s linear;
                -webkit-transition: color .7s linear;
                color: #ffffff;
                transition: color .7s linear;
            }

            .fb-logo { font-size: 1.8em; }

            #social-menu { padding: 10px 0px; }
        </style>
        
        @RenderSection("Style", false)
     
    </head>

    <body>
                   
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-top-menu">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">
                    <img src="/Content/img/common/feedback-heads1-300x224.png" class="img-rounded img-responsive pull-left" height="60" width="60" />                   
                </a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="navbar-collapse-top-menu">
                <div class="navbar-right">
                    <button type="button" class="btn btn-sm btn-success navbar-btn">Sign in</button>
                    <button type="button" class="btn btn-sm btn-info navbar-btn">Sign Up</button>
                </div>
            </div><!-- /.navbar-collapse -->
        </nav>
        
        @RenderBody()
        
        <footer id="global-footer">
            <nav id="footer-nav"" role="navigation">               
                <div id="footer-menu">                    
                    <ul class="list-inline footer-menu-links pull-right" >                      
                        <li><a class="" href="/about/">About</a></li>
                        <li><a class="" href="/about/terms/">Terms</a></li>
                        <li><a class="" href="/about/privacy/">Privacy</a></li>
                        <li><a class="" href="/about/contact/">Contact</a></li>
                    </ul> 
                    <div class="fb-logo">feedback</div>
                </div>
                
                <div class="clearfix"></div>
                
                <ul id="social-menu" class="list-inline footer-menu-links pull-right">
                    <li class="twitter"><a href="#"><span class="fa fa-twitter-square fa-2x"></span></a></li>
                    <li class="gplus"><a href="#"><span class="fa fa-google-plus-square fa-2x"></span></a></li>
                    <li class="facebook"><a href="#"><span class="fa fa-facebook-square fa-2x"></span></a></li>                  
                </ul>
            </nav>      
        </footer>

        <script src="/Scripts/js/jquery-1.10.2.min.js"> </script>
        <script src="/Scripts/js/bootstrap.min.js"> </script>
        <script src="/Scripts/js/holder.js"> </script>        
        @RenderSection("Script", false)

    </body>
